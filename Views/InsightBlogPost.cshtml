@inherits Umbraco.Cms.Web.Common.Views.UmbracoViewPage

@{
    Layout = "Master1.cshtml";
}

<style>
    html, body {
        margin: 0;
        padding: 0;
        width: 100%;
        height: 100%;
        font-family: "Segoe UI", sans-serif;
        background-color: #ffffff;
    }

    .blog-post {
        width: 100%;
        min-height: 100vh; /* full page height */
        padding: 2rem 0; /* remove side padding */
    }

    .blog-post h1 {
        font-size: 3rem;
        color: #2c3e50;
        margin-bottom: 1rem;
        text-align: center;
    }

    .blog-post .date {
        font-size: 1rem;
        color: #888888;
        margin-bottom: 2rem;
        text-align: center;
    }

    .blog-image {
        width: 100%; /* full width */
        height: 500px; /* adjust as needed */
        overflow: hidden;
        margin-bottom: 2rem;
    }

    .blog-image img {
        width: 100%;
        height: 100%;
        object-fit: cover;
        display: block;
    }

    .blog-body {
        font-size: 1.2rem;
        color: #333333;
        line-height: 1.8;
        width: 100%; /* full width */
        max-width: none; /* remove text width limit */
        margin: 0; /* no auto-center */
        padding: 0 2rem; /* optional left-right breathing room */
    }

    .blog-body p {
        margin-bottom: 1.5rem;
    }
</style>

<article class="blog-post">
    <h1>@Model.Value("title")</h1>

    @{
        var blogImage = Model.Value<IPublishedContent>("image");
    }
    @if (blogImage != null)
    {
        <div class="blog-image">
            <img src="@blogImage.Url()" alt="@Model.Value("title")" />
        </div>
    }

    <div class="blog-body">
        @Html.Raw(Model.Value("body"))
    </div>
</article>
